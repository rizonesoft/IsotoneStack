<Window x:Class="Isotone.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="IsotoneStack"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Border Background="#0F0F0F" 
            CornerRadius="8"
            BorderBrush="#1A1A1A"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="Black" Opacity="0.8"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Title -->
            <StackPanel Grid.Row="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                
                <!-- Orbital Animation -->
                <Grid Width="120" Height="120" Margin="0,0,0,20">
                    <!-- Background circle -->
                    <Ellipse Fill="#1A1A1A" Width="120" Height="120">
                        <Ellipse.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="#22D3EE" Opacity="0.3"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <!-- Center circle -->
                    <Ellipse Width="30" Height="30" 
                           Fill="#22D3EE"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                        <Ellipse.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#22D3EE" Opacity="0.5"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <!-- Orbit 1 - First rotating container -->
                    <Grid Width="120" Height="120">
                        <Grid.RenderTransform>
                            <RotateTransform x:Name="Orbit1Rotation" 
                                           CenterX="60" CenterY="60" 
                                           Angle="0"/>
                        </Grid.RenderTransform>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Grid.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Orbit1Rotation"
                                            Storyboard.TargetProperty="Angle"
                                            From="0" To="360"
                                            Duration="0:0:1.5"
                                            RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                        
                        <!-- Planet positioned at radius -->
                        <Ellipse Width="15" Height="15" 
                               Fill="#22D3EE"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,22,0,0">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#22D3EE" Opacity="0.7"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </Grid>
                    
                    <!-- Orbit 2 - Second rotating container -->
                    <Grid Width="120" Height="120">
                        <Grid.RenderTransform>
                            <RotateTransform x:Name="Orbit2Rotation" 
                                           CenterX="60" CenterY="60" 
                                           Angle="120"/>
                        </Grid.RenderTransform>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Grid.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Orbit2Rotation"
                                            Storyboard.TargetProperty="Angle"
                                            From="120" To="480"
                                            Duration="0:0:2.5"
                                            RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                        
                        <!-- Planet positioned at radius -->
                        <Ellipse Width="10" Height="10" 
                               Fill="#22D3EE"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,15,0,0"
                               Opacity="0.8">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#22D3EE" Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </Grid>
                    
                    <!-- Orbit 3 - Third rotating container -->
                    <Grid Width="120" Height="120">
                        <Grid.RenderTransform>
                            <RotateTransform x:Name="Orbit3Rotation" 
                                           CenterX="60" CenterY="60" 
                                           Angle="240"/>
                        </Grid.RenderTransform>
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Grid.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Orbit3Rotation"
                                            Storyboard.TargetProperty="Angle"
                                            From="240" To="-120"
                                            Duration="0:0:4"
                                            RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                        
                        <!-- Planet positioned at radius -->
                        <Ellipse Width="8" Height="8" 
                               Fill="#22D3EE"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,25"
                               Opacity="0.6">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="#22D3EE" Opacity="0.3"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </Grid>
                </Grid>
                
                <!-- Title -->
                <TextBlock Text="IsotoneStack" 
                         FontSize="32" 
                         FontWeight="Light"
                         Foreground="#FFFFFF"
                         HorizontalAlignment="Center"/>
                
                <TextBlock Text="Control Panel" 
                         FontSize="14" 
                         FontWeight="Light"
                         Foreground="#808080"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Loading Message -->
            <StackPanel Grid.Row="1" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                
                <TextBlock x:Name="LoadingText"
                         Text="Initializing services"
                         FontSize="12"
                         Foreground="#B0B0B0"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,10"/>
                
                <!-- Loading Bar -->
                <Grid Width="200" Height="4">
                    <Rectangle Fill="#1A1A1A" RadiusX="2" RadiusY="2"/>
                    <Rectangle x:Name="LoadingBar" 
                             Fill="#22D3EE" 
                             RadiusX="2" RadiusY="2"
                             Width="60"
                             HorizontalAlignment="Left">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="LoadingBarTransform" X="0"/>
                        </Rectangle.RenderTransform>
                        <Rectangle.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingBarTransform"
                                                       Storyboard.TargetProperty="X"
                                                       From="-60" To="200" Duration="0:0:1.5"
                                                       EasingFunction="{x:Null}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Rectangle.Triggers>
                    </Rectangle>
                </Grid>
            </StackPanel>
            
            <!-- Version Info -->
            <StackPanel Grid.Row="2" 
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <TextBlock Text="Version 2025.9.1" 
                         FontSize="10"
                         Foreground="#606060"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="© 2025 IsotoneStack" 
                         FontSize="10"
                         Foreground="#606060"
                         HorizontalAlignment="Center"
                         Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>