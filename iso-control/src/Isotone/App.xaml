<Application x:Class="Isotone.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                
                <!-- Custom Colors -->
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#0F0F0F"/>
                    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#1A1A1A"/>
                    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="#141414"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0A0A0A"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="#22D3EE"/>
                    <SolidColorBrush x:Key="AccentHoverBrush" Color="#38BDD8"/>
                    <SolidColorBrush x:Key="AccentSelectedBrush" Color="#155E75"/>
                    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
                    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
                    
                    <!-- Text Colors -->
                    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#E0E0E0"/>
                    <SolidColorBrush x:Key="DisabledTextBrush" Color="#606060"/>
                    
                    <!-- Override Material Design Card Background -->
                    <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>