<Application x:Class="Isotone.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Isotone.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                
                <!-- Custom Colors -->
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#0F0F0F"/>
                    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#1A1A1A"/>
                    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="#141414"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#0A0A0A"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="#22D3EE"/>
                    <SolidColorBrush x:Key="AccentHoverBrush" Color="#38BDD8"/>
                    <SolidColorBrush x:Key="AccentSelectedBrush" Color="#155E75"/>
                    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
                    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
                    
                    <!-- Text Colors -->
                    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#E0E0E0"/>
                    <SolidColorBrush x:Key="DisabledTextBrush" Color="#606060"/>
                    
                    <!-- Override Material Design Card Background -->
                    <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    </Style>
                    
                    <!-- Enhanced Progress Bar Style -->
                    <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
                        <Setter Property="Height" Value="8"/>
                        <Setter Property="Background" Value="#0A0F1A"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Grid>
                                        <!-- Background track with rounded corners and shadow -->
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1" Direction="270" 
                                                                Color="Black" Opacity="0.4" BlurRadius="2"/>
                                            </Border.Effect>
                                        </Border>
                                        
                                        <!-- Progress indicator container -->
                                        <Border x:Name="PART_Track" 
                                                Background="Transparent"
                                                CornerRadius="4"
                                                ClipToBounds="True">
                                            <Border x:Name="PART_Indicator"
                                                    HorizontalAlignment="Left"
                                                    CornerRadius="4"
                                                    Background="{TemplateBinding Foreground}">
                                                <Grid>
                                                    <!-- Glossy overlay for depth -->
                                                    <Border CornerRadius="4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#40FFFFFF" Offset="0"/>
                                                                <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                                                                <GradientStop Color="Transparent" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    
                                                    <!-- Animated diagonal stripes -->
                                                    <Rectangle x:Name="AnimatedStripes" 
                                                             RadiusX="4" RadiusY="4" 
                                                             Opacity="0.2">
                                                        <Rectangle.Fill>
                                                            <DrawingBrush TileMode="Tile" 
                                                                        Viewport="0,0,20,8" 
                                                                        ViewportUnits="Absolute">
                                                                <DrawingBrush.Transform>
                                                                    <TranslateTransform x:Name="StripeTransform"/>
                                                                </DrawingBrush.Transform>
                                                                <DrawingBrush.Drawing>
                                                                    <GeometryDrawing Brush="White">
                                                                        <GeometryDrawing.Geometry>
                                                                            <PathGeometry>
                                                                                <PathFigure StartPoint="0,0">
                                                                                    <LineSegment Point="10,0"/>
                                                                                    <LineSegment Point="20,8"/>
                                                                                    <LineSegment Point="10,8"/>
                                                                                </PathFigure>
                                                                            </PathGeometry>
                                                                        </GeometryDrawing.Geometry>
                                                                    </GeometryDrawing>
                                                                </DrawingBrush.Drawing>
                                                            </DrawingBrush>
                                                        </Rectangle.Fill>
                                                    </Rectangle>
                                                </Grid>
                                            </Border>
                                        </Border>
                                    </Grid>
                                    
                                    <ControlTemplate.Triggers>
                                        <!-- Animate stripes continuously -->
                                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="StripeTransform"
                                                                   Storyboard.TargetProperty="X"
                                                                   From="0" To="20" 
                                                                   Duration="0:0:1.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        
                                        <!-- Pulsing effect for critical values (>90%) -->
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value, 
                                                              Converter={x:Static converters:GreaterThanConverter.Instance}, 
                                                              ConverterParameter=90}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="PART_Indicator"
                                                                       Storyboard.TargetProperty="Opacity"
                                                                       From="1.0" To="0.7" 
                                                                       Duration="0:0:0.8"
                                                                       AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="PART_Indicator"
                                                                       Storyboard.TargetProperty="Opacity"
                                                                       To="1.0" 
                                                                       Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>