<Window x:Class="Isotone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:Isotone.Converters"
        mc:Ignorable="d"
        Title="IsotoneStack Control Panel"
        Height="720" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#0F1829"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <converters:UsageToColorConverter x:Key="UsageToColorConverter"/>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimation Storyboard.TargetProperty="Width" 
                           From="60" To="250" Duration="0:0:0.3"
                           AccelerationRatio="0.2" DecelerationRatio="0.8"/>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimation Storyboard.TargetProperty="Width" 
                           From="250" To="60" Duration="0:0:0.3"
                           AccelerationRatio="0.2" DecelerationRatio="0.8"/>
        </Storyboard>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding IsMenuOpen}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#080C12"
                            Height="60">
                        <DockPanel Margin="16,0">
                            <!-- Menu Toggle -->
                            <ToggleButton x:Name="MenuToggleButton"
                                        Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                                        IsChecked="False"
                                        DockPanel.Dock="Left"
                                        HorizontalAlignment="Left"
                                        Foreground="{DynamicResource AccentBrush}"
                                        Margin="0,0,16,0"/>

                            <!-- Logo and Title -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                                <!-- Orbital Spinner Animation -->
                                <Grid Width="48" Height="48" Margin="0,0,12,0">
                                    <!-- Center circle -->
                                    <Ellipse Width="12" Height="12" 
                                           Fill="{DynamicResource AccentBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    </Ellipse>
                                    
                                    <!-- Orbit 1 - First rotating container -->
                                    <Grid Width="48" Height="48">
                                        <Grid.RenderTransform>
                                            <RotateTransform x:Name="Orbit1Rotation" 
                                                           CenterX="24" CenterY="24" 
                                                           Angle="0"/>
                                        </Grid.RenderTransform>
                                        <Grid.Triggers>
                                            <EventTrigger RoutedEvent="Grid.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="Orbit1Rotation"
                                                            Storyboard.TargetProperty="Angle"
                                                            From="0" To="360"
                                                            Duration="0:0:1.5"
                                                            RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Grid.Triggers>
                                        
                                        <!-- Planet positioned at radius -->
                                        <Ellipse Width="6" Height="6" 
                                               Fill="{DynamicResource AccentBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Margin="0,9,0,0">
                                        </Ellipse>
                                    </Grid>
                                    
                                    <!-- Orbit 2 - Second rotating container -->
                                    <Grid Width="48" Height="48">
                                        <Grid.RenderTransform>
                                            <RotateTransform x:Name="Orbit2Rotation" 
                                                           CenterX="24" CenterY="24" 
                                                           Angle="120"/>
                                        </Grid.RenderTransform>
                                        <Grid.Triggers>
                                            <EventTrigger RoutedEvent="Grid.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard BeginTime="0:0:0.5">
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="Orbit2Rotation"
                                                            Storyboard.TargetProperty="Angle"
                                                            From="120" To="480"
                                                            Duration="0:0:2"
                                                            RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Grid.Triggers>
                                        
                                        <Ellipse Width="6" Height="6" 
                                               Fill="{DynamicResource AccentBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Margin="0,9,0,0">
                                        </Ellipse>
                                    </Grid>
                                    
                                    <!-- Orbit 3 - Third rotating container -->
                                    <Grid Width="48" Height="48">
                                        <Grid.RenderTransform>
                                            <RotateTransform x:Name="Orbit3Rotation" 
                                                           CenterX="24" CenterY="24" 
                                                           Angle="240"/>
                                        </Grid.RenderTransform>
                                        <Grid.Triggers>
                                            <EventTrigger RoutedEvent="Grid.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard BeginTime="0:0:1">
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="Orbit3Rotation"
                                                            Storyboard.TargetProperty="Angle"
                                                            From="240" To="600"
                                                            Duration="0:0:2.5"
                                                            RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Grid.Triggers>
                                        
                                        <Ellipse Width="6" Height="6" 
                                               Fill="{DynamicResource AccentBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Margin="0,9,0,0">
                                        </Ellipse>
                                    </Grid>
                                </Grid>
                                
                                <TextBlock Text="IsotoneStack Control Panel" 
                                         VerticalAlignment="Center" 
                                         FontSize="20" 
                                         FontWeight="Medium"
                                         Foreground="{DynamicResource PrimaryTextBrush}"/>
                            </StackPanel>

                            <!-- Right side status -->
                            <StackPanel Orientation="Horizontal" 
                                      DockPanel.Dock="Right" 
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center">
                                
                                <!-- Services Status Indicator -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                    <Ellipse Width="10" Height="10" 
                                           Fill="{Binding StatusColor}" 
                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding StatusText}" 
                                             VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Notification Bell -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                      ToolTip="Notifications"
                                      Margin="0,0,8,0">
                                    <materialDesign:PackIcon Kind="Bell"/>
                                </Button>

                                <!-- Settings -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                      Command="{Binding OpenSettingsCommand}"
                                      ToolTip="Settings">
                                    <materialDesign:PackIcon Kind="Settings"/>
                                </Button>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content Area -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Side Navigation -->
                        <Border Grid.Column="0" 
                              x:Name="NavigationPanel"
                              Width="250"
                              Background="#1C2635"
                              BorderThickness="0,0,1,0"
                              BorderBrush="#052838">
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Navigation Items -->
                                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding NavigationItems}" Margin="0,16">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <RadioButton Height="48"
                                                           Margin="8,2"
                                                           Padding="0"
                                                           IsChecked="{Binding IsSelected}"
                                                           Command="{Binding NavigateCommand}"
                                                           GroupName="Navigation"
                                                           Background="Transparent"
                                                           BorderThickness="0">
                                                    <RadioButton.Style>
                                                        <Style TargetType="RadioButton">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="RadioButton">
                                                                        <Border Name="Border" 
                                                                                Background="{TemplateBinding Background}"
                                                                                BorderThickness="0"
                                                                                CornerRadius="6"
                                                                                Margin="0,1">
                                                                            <Grid Margin="16,0">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="24"/>
                                                                                    <ColumnDefinition Width="16"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                
                                                                                <materialDesign:PackIcon Grid.Column="0" 
                                                                                                       Kind="{Binding Icon}" 
                                                                                                       Width="22" Height="22"
                                                                                                       VerticalAlignment="Center"
                                                                                                       HorizontalAlignment="Left"
                                                                                                       Name="NavIcon"
                                                                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                                                
                                                                                <TextBlock Grid.Column="2" 
                                                                                         Text="{Binding Title}" 
                                                                                         VerticalAlignment="Center"
                                                                                         HorizontalAlignment="Left"
                                                                                         FontSize="14"
                                                                                         Name="NavText"
                                                                                         Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="Border" Property="Background" Value="#1A22D3EE"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentSelectedBrush}"/>
                                                                                <Setter TargetName="NavText" Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                                                <Setter TargetName="NavIcon" Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </RadioButton.Style>
                                                </RadioButton>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <!-- System Resources -->
                                <Border Grid.Row="1" 
                                      Background="#080C12"
                                      BorderThickness="0,1,0,0"
                                      BorderBrush="#052838">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <!-- System Resources Card -->
                                            <Border Background="#1C2534"
                                                    CornerRadius="0"
                                                    BorderThickness="1"
                                                    BorderBrush="#2A3250"
                                                    Margin="8,8,8,4"
                                                    Padding="12">
                                                <StackPanel>
                                                    <TextBlock Text="SYSTEM RESOURCES" 
                                                             FontSize="10" 
                                                             FontWeight="Medium"
                                                             Foreground="{DynamicResource SecondaryTextBrush}"
                                                             Margin="0,0,0,8"/>
                                                    
                                                    <!-- CPU Usage -->
                                                    <Grid Margin="0,0,0,6">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="40"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="35"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Grid.ToolTip>
                                                            <ToolTip Background="#080C12" BorderBrush="#2A3250" BorderThickness="1">
                                                                <StackPanel>
                                                                    <TextBlock Text="CPU Usage" FontWeight="Bold" Foreground="#22D3EE" Margin="0,0,0,4"/>
                                                                    <TextBlock Text="{Binding CpuUsage, StringFormat='Current: {0:0.1}%'}" Foreground="#E0E0E0"/>
                                                                    <TextBlock Text="Processor utilization across all cores" Foreground="#A0A0A0" FontSize="10" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </ToolTip>
                                                        </Grid.ToolTip>
                                                        
                                                        <TextBlock Grid.Column="0" Text="CPU" 
                                                                 FontSize="11" 
                                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                                 VerticalAlignment="Center"/>
                                                        
                                                        <ProgressBar Grid.Column="1" 
                                                                   Height="6"
                                                                   Value="{Binding CpuUsage}"
                                                                   Minimum="0" Maximum="100"
                                                                   Foreground="{Binding CpuUsage, Converter={StaticResource UsageToColorConverter}}"
                                                                   Background="#0F1829"
                                                                   BorderThickness="0"
                                                                   Margin="4,0"/>
                                                        
                                                        <TextBlock Grid.Column="2" 
                                                                 Text="{Binding CpuUsage, StringFormat='{}{0:0}%'}" 
                                                                 FontSize="10"
                                                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"/>
                                                    </Grid>
                                                    
                                                    <!-- RAM Usage -->
                                                    <Grid Margin="0,0,0,6">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="40"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="35"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Grid.ToolTip>
                                                            <ToolTip Background="#080C12" BorderBrush="#2A3250" BorderThickness="1">
                                                                <StackPanel>
                                                                    <TextBlock Text="Memory Usage" FontWeight="Bold" Foreground="#22D3EE" Margin="0,0,0,4"/>
                                                                    <TextBlock Text="{Binding RamUsage, StringFormat='Current: {0:0.1}%'}" Foreground="#E0E0E0"/>
                                                                    <TextBlock Text="{Binding SystemInfo}" Foreground="#E0E0E0"/>
                                                                    <TextBlock Text="Physical memory utilization" Foreground="#A0A0A0" FontSize="10" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </ToolTip>
                                                        </Grid.ToolTip>
                                                        
                                                        <TextBlock Grid.Column="0" Text="RAM" 
                                                                 FontSize="11" 
                                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                                 VerticalAlignment="Center"/>
                                                        
                                                        <ProgressBar Grid.Column="1" 
                                                                   Height="6"
                                                                   Value="{Binding RamUsage}"
                                                                   Minimum="0" Maximum="100"
                                                                   Foreground="{Binding RamUsage, Converter={StaticResource UsageToColorConverter}}"
                                                                   Background="#0F1829"
                                                                   BorderThickness="0"
                                                                   Margin="4,0"/>
                                                        
                                                        <TextBlock Grid.Column="2" 
                                                                 Text="{Binding RamUsage, StringFormat='{}{0:0}%'}" 
                                                                 FontSize="10"
                                                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"/>
                                                    </Grid>
                                                    
                                                    <!-- Disk Usage -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="40"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="35"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Grid.ToolTip>
                                                            <ToolTip Background="#080C12" BorderBrush="#2A3250" BorderThickness="1">
                                                                <StackPanel>
                                                                    <TextBlock Text="Disk Usage (C:)" FontWeight="Bold" Foreground="#22D3EE" Margin="0,0,0,4"/>
                                                                    <TextBlock Text="{Binding DiskUsage, StringFormat='Current: {0:0.1}%'}" Foreground="#E0E0E0"/>
                                                                    <TextBlock Text="{Binding DiskFreeSpace}" Foreground="#E0E0E0"/>
                                                                    <TextBlock Text="System drive storage utilization" Foreground="#A0A0A0" FontSize="10" Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </ToolTip>
                                                        </Grid.ToolTip>
                                                        
                                                        <TextBlock Grid.Column="0" Text="DISK" 
                                                                 FontSize="11" 
                                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                                 VerticalAlignment="Center"/>
                                                        
                                                        <ProgressBar Grid.Column="1" 
                                                                   Height="6"
                                                                   Value="{Binding DiskUsage}"
                                                                   Minimum="0" Maximum="100"
                                                                   Foreground="{Binding DiskUsage, Converter={StaticResource UsageToColorConverter}}"
                                                                   Background="#0F1829"
                                                                   BorderThickness="0"
                                                                   Margin="4,0"/>
                                                        
                                                        <TextBlock Grid.Column="2" 
                                                                 Text="{Binding DiskUsage, StringFormat='{}{0:0}%'}" 
                                                                 FontSize="10"
                                                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Content Frame -->
                        <Border Grid.Column="1" Background="{DynamicResource PrimaryBackgroundBrush}">
                            <Frame x:Name="MainFrame" 
                                 NavigationUIVisibility="Hidden"
                                 Content="{Binding CurrentView}"/>
                        </Border>
                    </Grid>
                </Grid>
            </materialDesign:DrawerHost>
            
            <!-- Snackbar for notifications -->
            <materialDesign:Snackbar MessageQueue="{Binding SnackbarMessageQueue}"
                                    x:Name="MainSnackbar"
                                    VerticalAlignment="Bottom"/>
        </Grid>
    </materialDesign:DialogHost>
</Window>