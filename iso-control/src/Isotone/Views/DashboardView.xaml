                            </Grid>
                        </Border>

                        <!-- Service Info -->
                        <StackPanel Grid.Row="1" Margin="16,16">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Port:" FontSize="11" 
                                         Foreground="{DynamicResource SecondaryTextBrush}"
                                         Opacity="0.7" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="3306" FontSize="11" 
                                         FontFamily="Consolas"
                                         Foreground="{DynamicResource AccentBrush}"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Status:" FontSize="11" 
                                         Foreground="{DynamicResource SecondaryTextBrush}"
                                         Opacity="0.7" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="Configured" FontSize="11" 
                                         Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Border Grid.Row="2" Background="#0A0F1A" 
                                CornerRadius="0,0,4,4" Padding="8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding StartMariaDBCommand}" 
                                      Style="{StaticResource ServiceActionButton}"
                                      IsEnabled="{Binding CanStartMariaDB}"
                                      ToolTip="Start Service (Ctrl+2)">
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Play" Width="16" Height="16">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMariaDBLoading}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                        <materialDesign:PackIcon Kind="CircleOutline" Width="16" Height="16">
                                            <materialDesign:PackIcon.RenderTransform>
                                                <RotateTransform CenterX="8" CenterY="8"/>
                                            </materialDesign:PackIcon.RenderTransform>
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMariaDBLoading}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard RepeatBehavior="Forever">
                                                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                                       From="0" To="360" Duration="0:0:1"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Grid>
                                </Button>
                                
                                <Button Command="{Binding StopMariaDBCommand}" 
                                      Style="{StaticResource ServiceActionButton}"
                                      IsEnabled="{Binding CanStopMariaDB}"
                                      ToolTip="Stop Service">
                                    <materialDesign:PackIcon Kind="Stop" Width="16" Height="16"/>
                                </Button>
                                
                                <Button Command="{Binding RestartMariaDBCommand}" 
                                      Style="{StaticResource ServiceActionButton}"
                                      IsEnabled="{Binding CanRestartMariaDB}"
                                      ToolTip="Restart Service">
                                    <materialDesign:PackIcon Kind="Restart" Width="16" Height="16"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Mailpit Card -->
