                        </Border>

                        <!-- Service Info -->
                        <StackPanel Grid.Row="1" Margin="16,16">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Ports:" FontSize="11" 
                                         Foreground="{DynamicResource SecondaryTextBrush}"
                                         Opacity="0.7" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="1025, 8025" FontSize="11" 
                                         FontFamily="Consolas"
                                         Foreground="{DynamicResource AccentBrush}"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="UI:" FontSize="11" 
                                         Foreground="{DynamicResource SecondaryTextBrush}"
                                         Opacity="0.7" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="http://localhost:8025" FontSize="11" 
                                         Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </Grid>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Border Grid.Row="2" Background="#0A0F1A" 
                                CornerRadius="0,0,4,4" Padding="8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Command="{Binding StartMailpitCommand}" 
                                      Style="{StaticResource ServiceActionButton}"
                                      IsEnabled="{Binding CanStartMailpit}"
                                      ToolTip="Start Service (Ctrl+3)">
                                    <Grid>
                                        <materialDesign:PackIcon Kind="Play" Width="16" Height="16">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMailpitLoading}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                        <materialDesign:PackIcon Kind="CircleOutline" Width="16" Height="16">
                                            <materialDesign:PackIcon.RenderTransform>
                                                <RotateTransform CenterX="8" CenterY="8"/>
                                            </materialDesign:PackIcon.RenderTransform>
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMailpitLoading}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard RepeatBehavior="Forever">
                                                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                                       From="0" To="360" Duration="0:0:1"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Grid>
                                </Button>
                                
                                <Button Command="{Binding StopMailpitCommand}" 
                                      Style="{StaticResource ServiceActionButton}"
                                      IsEnabled="{Binding CanStopMailpit}"
                                      ToolTip="Stop Service">
                                    <materialDesign:PackIcon Kind="Stop" Width="16" Height="16"/>
                                </Button>
                                
                                <Button Command="{Binding RestartMailpitCommand}" 
                                      Style="{StaticResource ServiceActionButton}"
                                      IsEnabled="{Binding CanRestartMailpit}"
                                      ToolTip="Restart Service">
                                    <materialDesign:PackIcon Kind="Restart" Width="16" Height="16"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Quick Actions and Information -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Quick Actions Card -->
                <materialDesign:Card Grid.Column="0" Margin="0,0,12,0" 
                                   Background="#1C2635"
                                   Style="{StaticResource ModernCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#0F1420" 
                                CornerRadius="4,4,0,0" Padding="20,16">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="RocketLaunch" Width="24" Height="24" 
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="Quick Actions" FontSize="18" 
                                         FontWeight="SemiBold" 
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Actions -->
                        <StackPanel Grid.Row="1" Margin="20,16,20,20">
                            <!-- Service Controls -->
                            <TextBlock Text="SERVICE CONTROLS" FontSize="10" 
                                     Foreground="{DynamicResource SecondaryTextBrush}"
                                     Opacity="0.7" Margin="0,0,0,8"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Column="0" Grid.Row="0"
                                      Command="{Binding StartAllServicesCommand}" 
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Height="36" Background="#1B5E20" BorderBrush="#1B5E20">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PlayCircle" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="START ALL" FontSize="11"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="2" Grid.Row="0"
                                      Command="{Binding StopAllServicesCommand}" 
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Height="36" Background="#B71C1C" BorderBrush="#B71C1C">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="StopCircle" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="STOP ALL" FontSize="11"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2"
                                      Command="{Binding RestartAllServicesCommand}" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="36" BorderBrush="{DynamicResource AccentBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Restart" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="RESTART ALL SERVICES" FontSize="11"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Web Actions -->
                            <TextBlock Text="WEB ACTIONS" FontSize="10" 
                                     Foreground="{DynamicResource SecondaryTextBrush}"
                                     Opacity="0.7" Margin="0,0,0,8"/>
                            
                            <Button Command="{Binding OpenLocalhostCommand}" 
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  HorizontalAlignment="Stretch"
                                  Height="36" Margin="0,0,0,4"
                                  BorderBrush="#22D3EE">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Web" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Open Localhost" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding OpenPhpMyAdminCommand}" 
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  HorizontalAlignment="Stretch"
                                  Height="36" Margin="0,0,0,4"
                                  BorderBrush="#22D3EE">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Database" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Open phpMyAdmin" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding OpenMailpitCommand}" 
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  HorizontalAlignment="Stretch"
                                  Height="36" Margin="0,0,0,16"
                                  BorderBrush="#22D3EE">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Email" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Open Mailpit" FontSize="12"/>
                                </StackPanel>
                            </Button>

                            <!-- System Actions -->
                            <TextBlock Text="SYSTEM ACTIONS" FontSize="10" 
                                     Foreground="{DynamicResource SecondaryTextBrush}"
                                     Opacity="0.7" Margin="0,0,0,8"/>
                            
                            <Button Command="{Binding OpenProjectFolderCommand}" 
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  HorizontalAlignment="Stretch"
                                  Height="32" Margin="0,0,0,4">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Open Project Folder" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding OpenHostsFileCommand}" 
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  HorizontalAlignment="Stretch"
                                  Height="32" Margin="0,0,0,4">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileEdit" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Edit Hosts File" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding RefreshServicesCommand}" 
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  HorizontalAlignment="Stretch"
                                  Height="32">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Refresh Services" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- System Information Card -->
                <materialDesign:Card Grid.Column="1" 
                                   Background="#1C2635"
                                   Style="{StaticResource ModernCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#0F1420" 
                                CornerRadius="4,4,0,0" Padding="20,16">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="InformationCircle" Width="24" Height="24" 
                                                       Foreground="{DynamicResource AccentBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"/>
                                <TextBlock Text="System Information" FontSize="18" 
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource PrimaryTextBrush}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Information Grid -->
                        <Grid Grid.Row="1" Margin="20,16,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Installation Path -->
                            <Border Grid.Row="0" Padding="12,10" Margin="0,0,0,8"
                                  Background="#0A0F1A"
                                  CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <materialDesign:PackIcon Grid.Column="0" Kind="Folder" 
                                                           Width="20" Height="20"
                                                           Foreground="{DynamicResource AccentBrush}"
                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Installation Path" FontSize="11" 
                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                 Opacity="0.7" Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding IsotonePath}" 
                                                 TextWrapping="Wrap" FontSize="13"
                                                 Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- PHP Version -->
                            <Border Grid.Row="1" Padding="12,10" Margin="0,0,0,8"
                                  Background="Transparent"
                                  BorderBrush="#2A3545"
                                  BorderThickness="1"
                                  CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <materialDesign:PackIcon Grid.Column="0" Kind="LanguagePhp" 
                                                           Width="20" Height="20"
                                                           Foreground="#4ADE80"
                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="PHP Version" FontSize="11" 
                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                 Opacity="0.7" Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding PhpVersion}" FontSize="13"
                                                 Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Apache Version -->
                            <Border Grid.Row="2" Padding="12,10" Margin="0,0,0,8"
                                  Background="#0A0F1A"
                                  CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <materialDesign:PackIcon Grid.Column="0" Kind="Web" 
                                                           Width="20" Height="20"
                                                           Foreground="#FFA726"
                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Apache Version" FontSize="11" 
                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                 Opacity="0.7" Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding ApacheVersion}" FontSize="13"
                                                 Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- MariaDB Version -->
                            <Border Grid.Row="3" Padding="12,10"
                                  Background="Transparent"
                                  BorderBrush="#2A3545"
                                  BorderThickness="1"
                                  CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <materialDesign:PackIcon Grid.Column="0" Kind="Database" 
                                                           Width="20" Height="20"
                                                           Foreground="#E91E63"
                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="MariaDB Version" FontSize="11" 
                                                 Foreground="{DynamicResource SecondaryTextBrush}"
                                                 Opacity="0.7" Margin="0,0,0,2"/>
                                        <TextBlock Text="{Binding MariaDBVersion}" FontSize="13"
                                                 Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
    </Grid>
</UserControl>