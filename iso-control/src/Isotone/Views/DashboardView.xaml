                                   Background="#1C2635"
                                   Style="{StaticResource ModernCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Service Header -->
                        <Border Grid.Row="0" Background="#0F1420" 
                                CornerRadius="4,4,0,0" Padding="16,14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0" Kind="Email" 
                                                       Width="24" Height="24" 
                                                       Foreground="{Binding MailpitStatusColor}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"/>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
