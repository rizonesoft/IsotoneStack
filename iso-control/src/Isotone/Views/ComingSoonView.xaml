<UserControl x:Class="Isotone.Views.ComingSoonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    MaxWidth="600">
            
            <materialDesign:PackIcon Kind="Construction" 
                                   Width="100" Height="100"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,0,0,24"/>
            
            <TextBlock Text="{Binding Feature, StringFormat='{}{0} - Coming Soon'}" 
                     FontSize="32" 
                     FontWeight="Light"
                     HorizontalAlignment="Center"
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     Margin="0,0,0,16"/>
            
            <TextBlock Text="This feature is currently under development and will be available in a future update." 
                     FontSize="16"
                     TextWrapping="Wrap"
                     TextAlignment="Center"
                     Foreground="{DynamicResource SecondaryTextBrush}"
                     Margin="0,0,0,32"/>
        </StackPanel>
    </Grid>
</UserControl>